{% extends 'base.html.twig' %}
{% block body %}

<div class="row">
	<div class="col-md-3 col-md-offset-1">
		<a href="{{path('newarticle')}}">Crée</a>
		<div class="panel panel-primary ">
			<div class="panel-heading">
				<h3 class="panel-title">Tous les articles </h3>
			</div>
		  	<div class="panel-body">
				<div class="list-group">
					{% for article in articles %}
						<a href="{{path('detail_article', {'id': article.id })}}" class="list-group-item">{{article.nom}}</a>
						<a href="{{path('delete_entity',{'entity' : 'Article', 'id': article.id})}}">Supprimer</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-3 ">
		<a href="{{path('newcategory')}}">Crée</a>
		<div class="panel panel-primary ">
			<div class="panel-heading">
				<h3 class="panel-title">Tous les catégories</h3>
			</div>
		  	<div class="panel-body">
				<div class="list-group">
					{% for categorie in categories %}
						<a href="{{path('detail_categorie', {'id': categorie.id })}}" class="list-group-item">{{categorie.nom}}</a>
						<a href="{{path('delete_entity',{'entity' : 'Category', 'id':categorie.id})}}">Supprimer</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<div class="col-md-3 ">
		<a href="{{path('newtag')}}">Crée</a>
		<div class="panel panel-primary ">
			<div class="panel-heading">
				<h3 class="panel-title">Tous les tags</h3>
			</div>
		  	<div class="panel-body">
				<div class="list-group">
					{% for tag in tags %}
						<p class="list-group-item">{{tag.nom}} </p>
						<a href="{{path('delete_entity',{'entity' : 'Tag', 'id' : tag.id})}}">Supprimer</a>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	
</div>
{% endblock %}