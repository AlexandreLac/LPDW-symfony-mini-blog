{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.13/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container"  style="margin-top: 20px;">
<h2>Tout les articles</h2>
{% if articles is not empty %}
	<table id="myTable" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Tags</th>
                <th>Date Parution</th>
            </tr>
        </thead>
        <tbody>
			{% for article in articles%}
				<tr>
					<td><a href="articles/{{article.id}}">{{article.nom}}</a></td>
					<td></td>
					<td></td>
					<td>{{article.dateParution|date('d-m-Y')}}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% else %}
    <p>Il n'y a aucun article pour l'instant.</p>
{% endif %}
</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
    $('#myTable').DataTable({
    	"language":{
    		"url": "http://cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
    	}
    });
    $('#myTable').removeClass('display').addClass('table table-striped table-bordered');
});
</script>
{% endblock %}