{% extends 'form.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}

{% block body %}
<div class="container">
	<div class="row">
		<div class="col-sm-8 blog-main">
			<div class="blog-post">
				<h2 class="blog-post-title">{{article.nom}}</h2>
				<p class="blog-post-meta">{{article.dateParution|date('d-m-Y')}} par </p>
				<p>Tags : {% for tag in article.tags %} {{tag.nom}} {% endfor %}</p>
				<p>Cat√©gorie : {{article.categorie.nom }} </p>
				{{article.contenu|raw}}
			</div>
		</div>
	</div>
	<div class="block-commentaire">
		<div class="block-header">VOS COMMENTAIRES</div>
		<div class="block-content">
			{{ form_start(form, {'method': 'POST','attr':{'class':'col s12'}}) }}
				<div class="row">
					<div class="col s5">
						{{ form_row(form.auteur) }}
					</div>	
					<div class="col s8 ">
						{{ form_row(form.contenu) }}
					</div>
				</div>
				{{form_widget(form.submit, {'label':'Creer','attr':{'class':'btn waves-effect waves-light'}})}}
			{{ form_end(form)}}
		</div>
		<div class="block-content">
			<div class="row">
					 <div class="col s8 ">
						{% for commentaire in article.commentaires%}
							<p>{{commentaire.auteur}}</p>
							<p>{{commentaire.contenu}}</p>
							<p>{{commentaire.dateParution|date('d-m-Y')}}</p>
						{% endfor %}
					</div>
				</div>
		</div>
	</div>
</div>
{% endblock %}